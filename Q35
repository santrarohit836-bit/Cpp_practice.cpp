#include <iostream>
using namespace std;

int main() {
    int r, c;
    int A[10][10], B[10][10], C[10][10];

    // Input rows and columns
    cout << "Enter number of rows and columns: ";
    cin >> r >> c;

    // Input first matrix
    cout << "Enter elements of first matrix:\n";
    for(int i = 0; i < r; i++) {
        for(int j = 0; j < c; j++) {
            cin >> A[i][j];
        }
    }

    // Input second matrix
    cout << "Enter elements of second matrix:\n";
    for(int i = 0; i < r; i++) {
        for(int j = 0; j < c; j++) {
            cin >> B[i][j];
        }
    }

    // Matrix addition
    for(int i = 0; i < r; i++) {
        for(int j = 0; j < c; j++) {
            C[i][j] = A[i][j] + B[i][j];
        }
    }

    // Display result
    cout << "Resultant Matrix (Addition):\n";
    for(int i = 0; i < r; i++) {
        for(int j = 0; j < c; j++) {
            cout << C[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
