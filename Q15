// 15. Program to demonstrate bitwise operators.

#include <iostream>
using namespace std;

int main() {
    int a = 5, b = 3;

    cout << (a & b) << endl;   // Output: 1
    cout << (a | b) << endl;   // Output: 7
    cout << (a ^ b) << endl;   // Output: 6
    cout << (~a) << endl;      // Output: -6
    cout << (a << 1) << endl;  // Output: 10
    cout << (a >> 1) << endl;  // Output: 2

    return 0;
}

/*
Output:
1
7
6
-6
10
2
*/
